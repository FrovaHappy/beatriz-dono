---
import Nav from "../components/Nav/index.astro";

interface Props {
  title: string;
  description?: string;
  showFooter?: boolean;
}

const {
  title,
  showFooter = true,
  description = "Best bot for Discord, Beatriz Dono.",
} = Astro.props as Props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/jpg" href="/favicon.jpg" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@tabler/icons-webfont@latest/dist/tabler-icons.min.css"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Nav />
    <slot />
    {
      showFooter && (
        <footer>
          <p>
            Hecho con ❤️ por{" "}
            <a href="https://github.com/FrovaHappy">frova_happy</a>
          </p>
        </footer>
      )
    }
  </body>
</html>
<style is:global lang="scss">
  :root {
    --primary-color: #ff0066;
    --secondary-color: #00ff99;
    --bg-color: #121111;
    --font-color: #fff;
    --font-color-90: color-mix(in srgb, var(--font-color) 90%, transparent);
    --font-color-50: color-mix(in srgb, var(--font-color) 50%, transparent);
    --font-color-10: color-mix(in srgb, var(--font-color) 10%, transparent);

    --regular: 400;
    --semi-bold: 600;
    --bold: 700;

    --max-width: 1200px;
    --border-radius: 0.25rem;
    --border-radius-lg: 0.5rem;

    --z-menu: 100;
    --z-menu-button: 10;
  }
  [data-theme="light"] {
    --bg-color: #fff;
    --font-color: #000;
  }
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  html {
    color-scheme: light dark;
    font-family: system-ui, sans-serif;
    background: var(--bg-color);
    color: var(--font-color);
  }
  ul,
  ol,
  li,
  button,
  a {
    all: unset;
  }
  .button {
    cursor: pointer;
    display: flex;
    width: min-content;
    flex-wrap: nowrap;
    flex-shrink: 0;
    align-items: center;
    gap: 0.5em;
    padding: 0.375rem 0.75rem;
    border-radius: var(--border-radius);
    transition: all 0.2s ease-in-out;
    text-wrap: nowrap;
    &--icon {
      font-size: 1rem;
    }
    &--text {
      font-size: 0.875rem;
      font-weight: var(--semi-bold);
      text-wrap: nowrap;
    }
    &--primary {
      background: var(--primary-color);
      color: black;
      &:hover {
        background: color-mix(in srgb, var(--primary-color) 100%, white 25%);
      }
    }
    &--secondary {
      background: transparent;
      color: var(--font-color);
      border: 0.0625rem solid var(--font-color-50);
      &:hover {
        background: color-mix(in srgb, var(--font-color) 25%, transparent);
        color: var(--font-color);
      }
    }
    &--without-text {
      @extend .button--secondary;
      border: transparent;
      padding: 0.375rem;
    }
  }
  // SECTION TEXT STYLES
  h1 {
    all: unset;
    display: block;
    text-wrap: pretty;
    font-size: 3rem;
    font-weight: var(--bold);
    line-height: 1;
  }
  h2 {
    all: unset;
    display: block;
    text-wrap: pretty;
    font-size: 1.75rem;
    font-weight: var(--bold);
    line-height: 1.5;
  }
  p {
    all: unset;
    display: block;
    text-wrap: pretty;
    font-size: 1.125rem;
    line-height: 1.5;
  }
  footer {
    all: unset;
    display: flex;
    align-items: center;
    justify-content: center;
    border-top: var(--font-color-10) solid 1px;
    padding: 40px 0;
    p > a {
      cursor: pointer;
      color: var(--primary-color);
      text-decoration: underline;
      &:hover {
        color: color-mix(in srgb, var(--primary-color) 100%, white 25%);
      }
    }
  }
</style>
