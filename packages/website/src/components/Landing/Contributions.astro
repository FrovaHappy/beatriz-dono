<style lang="scss">
  section {
    display: flex;
    width: 100%;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    padding: 40px;
    background: var(--bg-color);
    border-radius: var(--border-radius);
    background: radial-gradient(
      circle at -10% -10%,
      var(--primary-color) 0%,
      var(--font-color-10) 50%
    );
  }
  .container {
    display: flex;
    max-width: 900px;
    flex-direction: column;
    gap: 1rem;
  }
  .buttons {
    display: flex;
    flex-direction: row;
    gap: 1rem;
  }
</style>
