---
import getPublic from "@utils/getPublic";
import Hero from "../components/Landing/Hero.astro";
import RoadMap from "../components/Landing/RoadMap.astro";
import Layout from "../layouts/Layout.astro";
import Modules from "@components/Landing/Modules.astro";

const pub = getPublic(import.meta.env.PUBLIC_VARIABLES);
---

<Layout title="Welcome to Beatriz Dono" pub={pub}>
  <main>
    <Hero discordBot={pub.urlJoinBot} kofi={pub.urlDonate.kofi} />
    <Modules />
    <RoadMap />
  </main>
</Layout>

<style>
  main {
    margin: 0 10%;
    display: flex;
    flex-direction: column;
    align-items: center;
    line-height: 1.6;
  }
</style>
