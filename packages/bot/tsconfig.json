{
  "compilerOptions": {
    "lib": ["es2024", "DOM"],
    "module": "ESNext",
    "target": "ES2022",
    "outDir": "dist",
    "rootDirs": ["src", "../shared"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "types": ["vitest/globals", "./src/global"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@core/*": ["src/core/*"],
      "@libs/*": ["../libs/dist/*"],
      "@type/*": ["../libs/src/types/*"],
      "@db": ["src/database/index.ts"]
    }
  },
  "include": ["src", "fonts"],
  "exclude": ["dist"]
}
