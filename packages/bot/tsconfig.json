{
  "display": "Node 18",
  "_version": "18.2.0",
  "compilerOptions": {
    "lib": [
      "es2023",
      "DOM"
    ],
    "module": "node16",
    "target": "es2022",
    "outDir": "dist",
    "rootDirs": ["src", "../shared"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "types": ["vitest/globals","./src/globals"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@core/*": ["src/core/*"],
      "@lib/*": ["../shared/lib/*"],
      "@type/*": ["../shared/types/*"],    }
  },
  "include": [
    "src",
    "fonts"
  ],
  "exclude": [
    "dist"
  ]
}